<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  
	    	
	<record id="dym_approval_payment_request_view" model="ir.ui.view">
		<field name="name">dym.request.payment.term.form.approval</field>
		<field name="model">dym.request.payment.term</field>
		<field name="inherit_id" ref="dym_request_payment_term_form_view"/>
		<field name="arch" type="xml">
			<field name="state" position="before">
				<!-- Yordan
				<button name="wkf_request_approval" states="draft" groups='dym_res_partner.group_dym_request_payment_term_rfa' string="RFA" type="object" class="oe_highlight"/>
				<button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight"/>
				<button name="%(dym_approval.dym_approval_reject_wizard_action)d" states="waiting_for_approval" string="Revise" type="action"
				 context="{'model_name':'dym.request.payment.term','update_value':{'approval_state':'r','state':'draft'}}"/>				
				<button name="%(dym_approval.dym_approval_cancel_wizard_action)d" groups='dym_res_partner.group_dym_request_payment_term_cancel_approval' states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'dym.request.payment.term','update_value':{'approval_state':'b','state':'draft'}}"/>																		
				-->
				<button name="wkf_request_approval" states="draft" string="RFA" type="object" class="oe_highlight" groups="dym_res_partner.group_dym_request_payment_term_rfa,dym_base_security.group_dym_adh"/>
				<button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight" groups="dym_base_security.group_dym_operation_sub_div_head,dym_base_security.group_dym_kepala_cabang,dym_base_security.group_dym_area_manager"/>
				<button name="%(dym_approval.dym_approval_reject_wizard_action)d" states="waiting_for_approval" string="Revise" type="action"
				 context="{'model_name':'dym.request.payment.term','update_value':{'approval_state':'r','state':'draft'}}" groups="dym_base_security.group_dym_operation_sub_div_head,dym_base_security.group_dym_kepala_cabang,dym_base_security.group_dym_area_manager"/>				
				<button name="%(dym_approval.dym_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'dym.request.payment.term','update_value':{'approval_state':'b','state':'draft'}}" groups="dym_res_partner.group_dym_request_payment_term_cancel_approval,dym_base_security.group_dym_operation_sub_div_head,dym_base_security.group_dym_kepala_cabang,dym_base_security.group_dym_area_manager"/>																		
									 			
			</field>
			<field name="date" position="after">
				<field name="approval_state"/>
			</field>								
			<xpath expr="//form/sheet" position="inside">
				<notebook>
				<page string="Approval">
					<field name="approval_ids">
						<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
							<field name="group_id" />
							<field name="branch_id"/>
							<field name="division"/>
							<field name="limit"/>
							<field name="sts"/>
							<field name="reason"/>
							<field name="pelaksana_id"/>
							<field name="tanggal"/>
						</tree>
					</field>
				</page>
					<page string="Audit Trail">
						<group>
							<group>
								<field name="create_uid" readonly="1"></field>
								<field name="create_date" readonly="1"></field>
								<field name="confirm_uid" readonly="1"></field>
								<field name="confirm_date" readonly="1"></field>
							</group>
							<group>							
								<field name="write_uid" readonly="1"></field>
								<field name="write_date" readonly="1"></field>
							</group>
						</group>
					</page>	 
					</notebook>				
			</xpath>
		</field>
	</record>
	          
 	</data>
 </openerp>
       		
       		
	
