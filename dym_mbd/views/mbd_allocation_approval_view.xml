<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="dym_mbd_allocation_approval_form_view" model="ir.ui.view">
            <field name="name">dym.mbd.allocation.form</field>
            <field name="model">dym.mbd.allocation</field>
            <field name="inherit_id" ref="dym_mbd_allocation_form_view" />
            <field name="arch" type="xml">
                <button name="wkf_action_cancel" position="before">
                    <button name="wkf_request_approval" states="draft" string="RFA" type="object" class="oe_highlight" />
                    <button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight" />
                    <button name="%(dym_approval.dym_approval_reject_wizard_action)d" states="waiting_for_approval" string="Revise" type="action" context="{'model_name':'dym.mbd.allocation','update_value':{'approval_state':'r','state':'draft'}}" />
                    <button name="%(dym_approval.dym_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'dym.mbd.allocation','update_value':{'approval_state':'b','state':'draft'}}" />
                </button>
                <field name="move_id" position="after">
                    <field name="approval_state" />
                </field>
                <xpath expr="//page[@string='Journal Line']" position="after">
                    <page string="Approval">
                        <field name="approval_ids">
                            <tree string="Approval" editable="bottom" create="false" edit="false" delete="false">
                                <field name="group_id" />
                                <field name="branch_id" />
                                <field name="division" />
                                <field name="limit" />
                                <field name="sts" />
                                <field name="reason" />
                                <field name="pelaksana_id" />
                                <field name="tanggal" />
                            </tree>
                        </field>
                    </page>
                    <page string="Audit Trail">
                        <group>
                            <group>
                                <field name="create_uid" readonly="1"></field>
                                <field name="create_date" readonly="1"></field>
                                <field name="confirm_uid" readonly="1"></field>
                                <field name="confirm_date" readonly="1"></field>
                            </group>
                            <group>
                                <field name="write_uid" readonly="1"></field>
                                <field name="write_date" readonly="1"></field>
                                <field name="cancel_uid" readonly="1"></field>
                                <field name="cancel_date" readonly="1"></field>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
