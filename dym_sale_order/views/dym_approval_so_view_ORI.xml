<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="dym_approval_so_form_view" model="ir.ui.view">
            <field name="name">dym.approval.so.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <button name="action_button_confirm" states="draft" position="replace">
                    <!-- Yordan
                    <button name="wkf_request_approval" states="draft,sent" string="RFA" type="object" class="oe_highlight" />
                    <button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight" />
                    <button name="%(dym_approval.dym_approval_reject_wizard_action)d" states="waiting_for_approval" string="Revise" type="action" context="{'model_name':'sale.order','update_value':{'approval_state':'r','state':'draft'}}" />
                    <button name="%(dym_approval.dym_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'sale.order','update_value':{'approval_state':'b','state':'draft'}}" />
                    <button name="action_button_confirm" states="approved" string="Confirm Sale" type="object" class="oe_highlight" groups="base.group_user" />
                    -->
                    <button name="wkf_request_approval" states="draft,sent" string="RFA" type="object" class="oe_highlight" groups="dym_base_security.group_dym_adh,dym_base_security.group_dym_admin_h23,dym_base_security.group_dym_counter_part" />
                    <button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight" groups="dym_base_security.group_dym_kepala_cabang" />
                    <button name="%(dym_approval.dym_approval_reject_wizard_action)d" states="waiting_for_approval" string="Revise" type="action" context="{'model_name':'sale.order','update_value':{'approval_state':'r','state':'draft'}}" groups="dym_base_security.group_dym_kepala_cabang" />
                    <button name="%(dym_approval.dym_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'sale.order','update_value':{'approval_state':'b','state':'draft'}}" groups="dym_base_security.group_dym_kepala_cabang" />
                    <button name="action_button_confirm" states="approved" string="Confirm Sale" type="object" class="oe_highlight" groups="dym_base_security.group_dym_adh,dym_base_security.group_dym_admin_h23,dym_base_security.group_dym_counter_part" />
                </button>
                <button name="action_button_confirm" states="sent" position="replace" />
                <button name="cancel" position="attributes">
                    <attribute name="states">draft,sent,approved</attribute>
                </button>
                <field name="currency_id" position="after">
                    <field name="approval_state" />
                </field>
                <xpath expr="//page[@string='Other Information']" position="after">
                    <page string="Approval">
                        <field name="approval_ids">
                            <tree string="Approval" editable="bottom" create="false" edit="false" delete="false">
                                <field name="group_id" />
                                <field name="branch_id" />
                                <field name="division" />
                                <field name="limit" />
                                <field name="sts" />
                                <field name="reason" />
                                <field name="pelaksana_id" />
                                <field name="tanggal" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>