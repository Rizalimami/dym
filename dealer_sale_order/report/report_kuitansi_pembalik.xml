<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data> 
<template id="report_kuitansi_pembalik_template">
    <style type="text/css">
        .tag_container{
            margin: auto;
            margin-bottom:50px;
            border: 1px solid black;
        }
        .no_border{
            border: 0px !important;
            line-height: 0.7 !important;
        }
        .margin_bottom{
            margin-top: 5px !important;
            margin-bottom: 5px !important;
        }
        .border_top{
            border-top: 1px solid black !important;
        }
        .border_bottom{
            border-bottom: 1px solid black !important;
        }
        .line_height{
        }
        .page, .header, .footer{
            font-size:14px;
        }
        .font_12{
            font-size:12px;
        }
    </style>
    <t t-call="report.html_container">    
		<t t-foreach="docs" t-as="o">
        	<t t-if="o and 'company_id' in o">
		        <t t-set="company" t-value="o.company_id"></t>
		    </t>
		    <t t-if="not o or not 'company_id' in o">
		        <t t-set="company" t-value="res_company"></t>
		    </t>
        	<t t-if="o and 'branch_id' in o and o.branch_id.company_id">
		        <t t-set="company" t-value="o.branch_id.company_id"></t>
		    </t>
            <div class="header">
        		<div class="row">
        			<div class="col-xs-12">
		                    <!-- <div class="pull-right"> -->
		                    	<div class="col-xs-8 text-right">
		                    		NO :
		                    	</div>
		                    	<div class="col-xs-4">
	                           		<t t-esc="o.get_no_invoice(o)"/><br/>
		                    		<span t-field="o.name"/>
	                           	</div>
	                        <!-- </div> -->
	                </div>
                </div>
            </div>
            <div class="page">
        		<div class="row">
        			<div class="col-xs-12 text-center">
						<h2>KUITANSI</h2>
					</div>
                	<div class="col-xs-12" style="min-height:50px;">
	        			<div class="col-xs-3">
	        				Telah Terima Dari
	        			</div>
	        			<div class="col-xs-9">
	                        <span t-field="company.name"/><br/>
							<span t-field="o.branch_id.street"/>
	                	</div>
	                </div>
                	<div class="col-xs-12" style="min-height:50px;">
	        			<div class="col-xs-3">
	        				Uang Sejumlah
	        			</div>
	        			<div class="col-xs-9">
							<t t-set="discount_total" t-value="0"/>
							<t t-foreach="o.dealer_sale_order_line" t-as="line">
								<t t-set="discount_total" t-value="discount_total+line.discount_total" />
							</t>
	                        <strong><t t-esc="o.get_terbilang(discount_total)"/></strong>
	                	</div>
	        		</div>
                	<div class="col-xs-12" style="min-height:50px;">
	        			<div class="col-xs-3">
	        				Untuk Pembayaran
	        			</div>
	        			<div class="col-xs-9">
	        				<t t-set="jumlah_as" t-value="0"/>
	        				<t t-foreach="o.dealer_sale_order_line" t-as="line">
				                <t t-set="jumlah_as" t-value="jumlah_as+1"/>
					        </t>
	                        <span t-field="o.untuk_pembayaran_3"/>
	                	</div>
	        		</div>
                	<div class="col-xs-12">
                		<!-- <div class="col-xs-12">
                			<span style="font-size:12px !important;">- Kuitansi ini merupakan bukti pembayaran yang sah dari <t t-esc="company.name"/><br/>
                			- Pembayaran dengan cheque / giro dianggap sah apabila cheque / giro tersebut telah cair dari rekening bank kami</span><br/>
                		</div> -->
                		<div class="col-xs-6" style="">
                			<br/><br/><br/><br/>
                			<div style="border-top: 1px black solid !important;border-bottom: 1px black solid !important; font-size:16px !important;">
                				<strong>Total <t t-esc="discount_total" t-esc-options='{"widget": "monetary", "display_currency": "user.company_id.currency_id"}'/></strong>
                			</div>
                		</div>
                		<div class="col-xs-6 text-right" style="min-height:50px;">
                			<span t-field="o.branch_id.state_id.name"/>, <t t-esc="o.branch_id.formatted_date(o.date_order)"/><br/><br/><br/><br/>
                			<t t-esc="o.cddb_id.name"/>
                		</div>
                		<br/><br/><br/><br/><br/><br/>
                		<div class="col-xs-9">
		                	<table class="table table-condensed" style="margin-bottom:0px !important;">
			                    <thead>
			                        <tr>
			                            <th class="no_border font_12"><strong>No. Mesin</strong></th>
			                            <th class="no_border font_12"><strong>No. Rangka</strong></th>
			                            <th class="no_border font_12"><strong>Warna</strong></th>
			                            <th class="no_border font_12"><strong>Tahun</strong></th>
			                        </tr>
			                    </thead>
			                    <tbody>
				                    <t t-foreach="o.dealer_sale_order_line" t-as="line">
				                    	<tr>
					                    	<td class="no_border font_12"><span t-field="line.lot_id.name"/></td>
					                    	<td class="no_border font_12"><span t-field="line.lot_id.chassis_code"/><span t-field="line.lot_id.chassis_no"/></td>
					                    	<td class="no_border font_12"><t t-esc="o.branch_id.get_attribute_name(line.product_id)"/></td>
					                    	<td class="no_border font_12"><span t-field="line.lot_id.tahun"/></td>
					                    </tr>
					                </t>		                    	
				            	</tbody>
			                </table>
			            </div>
		            </div>	                
                </div>
	        </div>
	    </t>
	</t>
</template>
</data>
</openerp>
