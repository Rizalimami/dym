<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="dym_incentive_menu" name="Incentive" parent="dym_dealer_menu.backoffice_nontrade_menu" sequence="60"/>

        <record model="ir.ui.view" id="dym_branch_config_incentive_allocation_form_view">
            <field name="name">dym.branch.config.alokasi.form.view</field>
            <field name="model">dym.branch.config</field>
            <field name="inherit_id" ref="dym_branch.dym_branch_config_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group" position="after">
                    <group string="Incentive Allocation">
                        <field name="dym_incentive_allocation_journal" />
                        <field name="dym_incentive_income_account" />
                        <field name="dym_writeoff_account_ids" widget="many2many_tags"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="dym_incentive_allocation_tree_view">
            <field name="name">dym.incentive.allocation.tree</field>
            <field name="model">dym.incentive.allocation</field>
            <field name="arch" type="xml">
                <tree string="Incentive Allocation" create="false">
                    <field name="name" />
                    <field name="date" />
                    <field name="branch_id" string='From' invisible="1" />
                    <field name="inter_branch_id" />
                    <field name="partner_id" />
                    <field name="total_cair" />
                    <field name="total_dpp" />
                    <field name="voucher_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="view_incentive_allocation_search" model="ir.ui.view">
            <field name="name">dym.incentive.allocation.search</field>
            <field name="model">dym.incentive.allocation</field>
            <field name="arch" type="xml">
                <search string="Search Incentive Allocation">
                    <field name="name" />
                    <field name="branch_id" />
                    <field name="partner_id" />
                    <field name="voucher_id" />
                    <field name="date" />
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}" />
                        <filter string="Partner" icon="terp-go-month" domain="[]" context="{'group_by':'partner_id'}" />
                        <filter string="Division" icon="terp-go-month" domain="[]" context="{'group_by':'division'}" />
                        <!-- <filter string="Advance Disburse" icon="terp-go-month" domain="[]" context="{'group_by':'voucher_id'}" /> -->
                        <filter string="State" icon="terp-go-month" domain="[]" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="dym_incentive_allocation_form_view">
            <field name="name">dym.incentive.allocation.form</field>
            <field name="model">dym.incentive.allocation</field>
            <field name="arch" type="xml">
                <form string="Incentive Allocation">
                    <header>
                        <!-- <button name="confirm_alokasi" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','approved'),('voucher_state','!=','open')]}" /> -->
                        <button name="view_voucher" string="View Voucher" type="object" class="oe_highlight" states="approved,done" />
                        <button name="wkf_action_cancel" states="draft,approved" string="Cancel" type="object" confirm="Apa anda yakin ingin membatalkan transaksi ini ?" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved,done" statusbar_colors='{"draft":"red","done":"blue"}' />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
					            <label string="Incentive Allocation"/>
					 			<field name="name" class="oe_inline" readonly="1"/>	
		    			    </h1>
                        </div>
                        <group>
                            <group string="From Branch">
                                <field name="branch_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="division" required="True" attrs="{'readonly':[('state','!=','draft')]}" />
                            </group>
                            <group string="To Branch">
                                <field name="inter_branch_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="inter_division" required="True" attrs="{'readonly':[('state','!=','draft')]}" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('state','!=','draft')]}" />
                                <!-- <field name="partner_cabang_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('state','!=','draft')]}" /> -->
                                <field name="journal_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" />
                                <field name="account_id" invisible="1" />
                                <field name="cde_id" attrs="{'invisible':[('state','=','draft')],'readonly':[('state','!=','draft')]}" />
                                <field name="cde_amount" readonly="1" />
                                <field name="titipan_line_id" />
                                <field name="voucher_id" options="{'no_show':True,'no_create':True,'no_open':False}" required="False" attrs="{'invisible':[('state','=','draft')],'readonly':[('state','!=','draft')]}" />
                                <field name="voucher_state" invisible="1" />
                                <field name="total_cair" />
                                <!-- <field name="titipan_move" invisible="1" /> -->
                                <field name="memo" attrs="{'readonly':[('state','in',['cancel','done'])]}" invisible="1" />
                                <field name="description" attrs="{'readonly':[('state','in',['cancel','done'])]}"/>
                            </group>
                            <group>
                                <field name="date" />
                                <field name="value_date" />
                                <field name="move_id" />
                                <field name="batch_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Allocation">
                                <button name="%(dym_eksport_import.action_export_import)d" type="action" help="Import Allocation" string="Import Allocation" class="oe_highlight" context="{'model': 'incentive_allocation','alokasi_id': active_id}" attrs="{'invisible':[('state','!=','draft')]}" />
                                <field name="line_ids" nolabel="1" widget="one2many_list" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree string="Journal Line" editable="bottom">
                                        <!-- <field name="titipan_line_id" domain="[('move_id','=',parent.titipan_move),('reconcile_id','=',False),('credit','>',0),('account_id.type','in',['payable','receivable'])]" options="{'no_show':True,'no_create':True,'no_open':True}" required="1" /> -->
                                        <field name="incentive_payment_type" invisible="1"/>
                                        <field name="titipan_line_id" domain="[('partner_id','=',leasing_id),('account_id','=',account_id),('branch_id','=',parent_branch_id),('reconcile_id','=',False),('credit','>',0),('account_id.type','in',['payable','receivable'])]" options="{'no_show':True,'no_create':True,'no_open':True}" attrs="{'required':[('incentive_payment_type','=','prepaid')]}" />
                                        <field name="deposit_id" invisible="1" />
                                        <field name="account_id" invisible="1" />
                                        <field name="leasing_id" invisible="1" />
                                        <field name="open_balance" invisible="1"/>
                                        <field name="open_balance_show" readonly="1" />
                                        <field name="lot_id" required="0" />
                                        <field name="parent_branch_id" invisible="1" />
                                        <field name="branch_id" required="1" />
                                        <!-- <field name="parent_inter_branch_id" /> -->
                                        <field name="division" required="1" />
                                        <field name="partner_id" required="1" string="Ke Partner" />
                                        <field name="description" required="1" />
                                        <field name="amount" required="1" sum="amount"/>
                                        <field name="tax_base" required="1" sum="tax_base"/>
                                        <field name="voucher_id" />
                                        <field name="state" invisible="1" />
                                        <!-- <button name="create_voucher" type="object" help="Create Voucher" icon="gtk-execute" string="Create Voucher" attrs="{'invisible':['|',('voucher_id','!=',False),('state','!=','done')]}" /> -->
                                        <!-- <button name="view_voucher" type="object" help="View Voucher" icon="gtk-go-forward" string="View Voucher" attrs="{'invisible':[('voucher_id','=',False)]}" /> -->
                                    </tree>
                                </field>
                            </page>
                            <page string="Journal Line">
                                <field name="move_ids" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="1" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="dym_incentive_allocation_action">
            <field name="name">Incentive Allocation</field>
            <field name="res_model">dym.incentive.allocation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <record id="dym_incentive_allocation_tree_action" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="dym_incentive_allocation_tree_view" />
            <field name="act_window_id" ref="dym_incentive_allocation_action" />
        </record>
        <record id="dym_incentive_allocation_form_action" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="dym_incentive_allocation_form_view" />
            <field name="act_window_id" ref="dym_incentive_allocation_action" />
        </record>

        <menuitem action="dym_incentive_allocation_action" id="dym_incentive_allocation_menu" parent="dym_incentive_menu" sequence="10"/>
    </data>
</openerp>
